{
    "name": "godmodelabs/flora-client-php",
    "description": "PHP client for Flora based APIs",
    "license": "MIT",
    "type": "library",
    "authors": [
        {
            "name": "Mark Plomer",
            "email": "mark.plomer@boerse-go.de"
        },
        {
            "name": "Nico Kaiser",
            "email": "nico.kaiser@boerse-go.de"
        },
        {
            "name": "Marco Baumgartl",
            "email": "marco.baumgartl@boerse-go.de"
        }
    ],
    "config": {
        "sort-packages": true
    },
    "autoload":{
        "files": ["src/functions.php"],
        "psr-4": {
            "Flora\\": "src/Flora/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Flora\\Client\\Test\\": "tests/"
        }
    },
    "prefer-stable": true,
    "require": {
        "php": ">=7.2",
        "ext-json": "*",
        "guzzlehttp/guzzle": "~6.2"
    },
    "require-dev": {
        "http-interop/http-factory-guzzle": "^1.0",
        "phpunit/phpunit": "^9.0"
    }
}
