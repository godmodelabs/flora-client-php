{
    "name": "godmodelabs/flora-client-php",
    "description": "PHP client for Flora based APIs",
    "license": "MIT",
    "type": "library",
    "authors": [
        {
            "name": "Mark Plomer",
            "email": "mark.plomer@stock3.com"
        },
        {
            "name": "Nico Kaiser",
            "email": "nico.kaiser@stock3.com"
        },
        {
            "name": "Marco Baumgartl",
            "email": "marco.baumgartl@stock3.com"
        }
    ],
    "config": {
        "sort-packages": true
    },
    "autoload":{
        "files": ["src/functions.php"],
        "psr-4": {
            "Flora\\": "src/Flora/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Flora\\Client\\Test\\": "tests/"
        }
    },
    "prefer-stable": true,
    "require": {
        "php": "~8.2.0 || ~8.3.0 || ~8.4.0",
        "guzzlehttp/guzzle": "^7.4"
    },
    "require-dev": {
        "http-interop/http-factory-guzzle": "^1.0",
        "phpunit/phpunit": "^11.3.0"
    },
    "archive": {
        "exclude": [".github/", "tests/", "phpunit.xml.dist"]
    }
}
